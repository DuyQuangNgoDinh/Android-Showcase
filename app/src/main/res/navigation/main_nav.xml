<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/catalogueFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="progtips.vn.androidshowcase.main.auth.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fm_login">
        <action
            android:id="@+id/navigateSignUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="progtips.vn.androidshowcase.main.auth.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fm_signup"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="progtips.vn.androidshowcase.main.auth.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fm_profile">
        <action
            android:id="@+id/profile_to_login"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/catalogueFragment"
        android:name="progtips.vn.androidshowcase.main.catalog.CatalogueFragment"
        android:label="fragment_catalogue"
        tools:layout="@layout/fragment_catalogue" >
        <action
            android:id="@+id/navigateProfileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
</navigation>