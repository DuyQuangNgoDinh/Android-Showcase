<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommentBox">
        <item name="android:background">@drawable/comment_bg</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="Comment">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Comment.Username">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Comment.Date">
        <item name="android:textColor">#99000000</item>
    </style>

    <style name="Comment.Content">
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="Comment.Reaction">
        <item name="android:textColor">#666666</item>
    </style>
</resources>